import numpy as np
import random
import textwrap
import json
from typing import List, Dict

# Basic Factor Graph Classes


class VariableNode:
    def __init__(self, name: str, domain: List[str], prior: np.ndarray = None):
        self.name = name
        self.domain = domain
        self.dim = len(domain)
        if prior is None:
            self.prior = np.ones(self.dim)  # unnormalized
        else:
            self.prior = np.array(prior, dtype=float)
        # neighbors: will be set by FactorGraph when factors are added
        self.factors: List['FactorNode'] = []

    def normalize_prior(self):
        s = np.sum(self.prior)
        if s <= 0:
            self.prior = np.ones(self.dim)
            s = np.sum(self.prior)
        self.prior = self.prior / s

    def __repr__(self):
        return f"Var({self.name}:{self.domain})"


class FactorNode:
    def __init__(self, name: str, variables: List[VariableNode], potential: np.ndarray):
        """
        potential shape must match len(var0) x len(var1) x ... order of variables.
        For unary factors, potential is a 1D array; for pairwise, a 2D matrix.
        """
        self.name = name
        self.variables = variables
        self.potential = np.array(potential, dtype=float)
        # register neighbor link
        for v in variables:
            v.factors.append(self)

    def is_unary(self):
        return len(self.variables) == 1

    def is_pairwise(self):
        return len(self.variables) == 2

    def __repr__(self):
        varnames = ",".join([v.name for v in self.variables])
        return f"Factor({self.name}: {varnames})"


class FactorGraph:
    def __init__(self):
        self.variables: Dict[str, VariableNode] = {}
        self.factors: Dict[str, FactorNode] = {}
        # messages
        self.m_v_to_f = {}  # key (var_name, factor_name) -> 1d numpy array
        self.m_f_to_v = {}  # key (factor_name, var_name) -> 1d numpy array

    def add_variable(self, name: str, domain: List[str], prior: List[float] = None):
        if prior is None:
            prior = np.ones(len(domain))
        v = VariableNode(name, domain, np.array(prior, dtype=float))
        v.normalize_prior()
        self.variables[name] = v
        return v

    def add_unary_factor(self, name: str, var_name: str, potential: List[float]):
        v = self.variables[var_name]
        pot = np.array(potential, dtype=float)
        if pot.shape[0] != v.dim:
            raise ValueError("Unary potential size mismatch")
        f = FactorNode(name, [v], pot)
        self.factors[name] = f
        return f

    def add_pairwise_factor(self, name: str, var1: str, var2: str, potential_matrix: np.ndarray):
        v1 = self.variables[var1]
        v2 = self.variables[var2]
        mat = np.array(potential_matrix, dtype=float)
        if mat.shape != (v1.dim, v2.dim):
            raise ValueError("Pairwise potential size mismatch")
        f = FactorNode(name, [v1, v2], mat)
        self.factors[name] = f
        return f

    def initialize_messages(self):
        """Initialize all messages to uniform (ones)."""
        self.m_v_to_f.clear()
        self.m_f_to_v.clear()
        for f_name, factor in self.factors.items():
            for var in factor.variables:
                self.m_f_to_v[(f_name, var.name)] = np.ones(var.dim)
                self.m_v_to_f[(var.name, f_name)] = np.ones(var.dim)

    @staticmethod
    def normalize(vec: np.ndarray):
        s = np.sum(vec)
        if s == 0:
            # avoid zeros; set uniform
            vec = np.ones_like(vec)
            s = np.sum(vec)
        return vec / s

    def run_belief_propagation(self, max_iters: int = 20, tol: float = 1e-6):
        """Run loopy belief propagation (sum-product) for unary + pairwise factors."""
        self.initialize_messages()

        for it in range(max_iters):
            max_diff = 0.0
            # Variable -> Factor messages
            for (var_name, var) in self.variables.items():
                for f in var.factors:
                    # product of prior and all incoming messages except from that factor
                    msg = np.array(var.prior, dtype=float)
                    for other_f in var.factors:
                        if other_f is f:
                            continue
                        incoming = self.m_f_to_v[(other_f.name, var.name)]
                        msg = msg * incoming
                    # normalize
                    msg = self.normalize(msg)
                    old = self.m_v_to_f[(var.name, f.name)]
                    diff = np.max(np.abs(old - msg))
                    if diff > max_diff:
                        max_diff = diff
                    self.m_v_to_f[(var.name, f.name)] = msg

            # Factor -> Variable messages
            for (f_name, factor) in self.factors.items():
                if factor.is_unary():
                    v = factor.variables[0]
                    # message is factor potential elementwise times incoming from var (excluding this factor)
                    # but since unary factors just represent a local potential, we multiply with var->factor
                    incoming = self.m_v_to_f[(v.name, f_name)]
                    msg = factor.potential * incoming
                    msg = self.normalize(msg)
                    old = self.m_f_to_v[(f_name, v.name)]
                    diff = np.max(np.abs(old - msg))
                    if diff > max_diff:
                        max_diff = diff
                    self.m_f_to_v[(f_name, v.name)] = msg
                elif factor.is_pairwise():
                    vA, vB = factor.variables
                    # message to A: for each x in A.domain: sum_y factor(x,y) * m_B->F(y)
                    m_B_to_f = self.m_v_to_f[(vB.name, f_name)]
                    # careful with shapes
                    # factor.potential shape: (len(A), len(B))
                    msgA = np.tensordot(factor.potential, m_B_to_f, axes=([1], [0]))  # results len(A)
                    msgA = self.normalize(msgA)
                    oldA = self.m_f_to_v[(f_name, vA.name)]
                    diffA = np.max(np.abs(oldA - msgA))
                    if diffA > max_diff:
                        max_diff = diffA
                    self.m_f_to_v[(f_name, vA.name)] = msgA

                    # message to B:
                    m_A_to_f = self.m_v_to_f[(vA.name, f_name)]
                    # sum_x factor(x,y) * m_A->F(x) -> produce len(B)
                    msgB = np.tensordot(factor.potential.T, m_A_to_f, axes=([1], [0]))
                    msgB = self.normalize(msgB)
                    oldB = self.m_f_to_v[(f_name, vB.name)]
                    diffB = np.max(np.abs(oldB - msgB))
                    if diffB > max_diff:
                        max_diff = diffB
                    self.m_f_to_v[(f_name, vB.name)] = msgB
                else:
                    # for safety: not implemented general high-arity factors
                    raise NotImplementedError("Only unary and pairwise factors are supported in this simple engine.")

            if max_diff < tol:
                # early stop
                break

    def compute_marginal(self, var_name: str) -> np.ndarray:
        """Compute approximate marginal for a variable (belief)."""
        v = self.variables[var_name]
        belief = np.array(v.prior, dtype=float)
        for f in v.factors:
            incoming = self.m_f_to_v[(f.name, v.name)]
            belief = belief * incoming
        belief = self.normalize(belief)
        return belief

    def apply_evidence_multiplier(self, var_name: str, multiplier: np.ndarray):
        """
        Apply multiplicative evidence to a variable's prior (unnormalized).
        multiplier should be same length as variable domain and positive.
        """
        v = self.variables[var_name]
        if multiplier.shape[0] != v.dim:
            raise ValueError("Multiplier length mismatch")
        v.prior = v.prior * multiplier
        v.normalize_prior()

    def export_state(self):
        """Return a JSON-serializable snapshot of priors (for save/load)."""
        return {name: list(var.prior) for name, var in self.variables.items()}

    def import_state(self, state_dict):
        for name, prior in state_dict.items():
            if name in self.variables:
                self.variables[name].prior = np.array(prior, dtype=float)
                self.variables[name].normalize_prior()


