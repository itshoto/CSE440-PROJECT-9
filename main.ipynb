# Adventure Quest: Baseline

"""
the Adventure Quest project.
It implements a minimal playable adventure game dat includes:
- Player and Enemy class design
- Basic combat
- Command-line interaction loop
- Randomized attack outcomes
"""

import random
import textwrap

class Player:
    def __init__(self, name: str, health: int = 100, strength: int = 10, defense: int = 5):
        self.name = name
        self.health = health
        self.strength = strength
        self.defense = defense

    def is_alive(self):
        return self.health > 0

    def attack(self, enemy):
        damage = max(0, self.strength - enemy.defense + random.randint(-2, 4))
        enemy.health -= damage
        print(f"{self.name} attacks {enemy.name} for {damage} damage!")
        return damage

class Enemy:
    def __init__(self, name: str, health: int = 60, strength: int = 8, defense: int = 3):
        self.name = name
        self.health = health
        self.strength = strength
        self.defense = defense

    def is_alive(self):
        return self.health > 0

    def attack(self, player):
        damage = max(0, self.strength - player.defense + random.randint(-2, 3))
        player.health -= damage
        print(f"{self.name} attacks {player.name} for {damage} damage!")
        return damage

def print_intro():
    intro = textwrap.dedent('''
    ==========================================
            WELCOME TO ADVENTURE QUEST
    ==========================================
    A mysterious land filled with dangers and challenges.
    Prepare yourself for an epic journey!
    ''')
    print(intro)

def battle(player, enemy):
    print(f"A wild {enemy.name} appears!")
    while player.is_alive() and enemy.is_alive():
        input("\nPress Enter to attack...")
        player.attack(enemy)
        if not enemy.is_alive():
            print(f"\n{enemy.name} has been defeated! You are victorious!")
            break

        enemy.attack(player)
        if not player.is_alive():
            print(f"\n{player.name} has fallen in battle. Game Over.")
            break

def main():
    print_intro()
    name = input("Enter your hero's name: ") or "Hero"
    player = Player(name)
    enemy = Enemy(random.choice(["Goblin", "Skeleton", "Dark Wolf"]))

    print(f"\nWelcome, {player.name}! Your adventure begins now.\n")
    battle(player, enemy)
    print("\nThanks for playing Adventure Quest â€” Update 1!")

if __name__ == "__main__":
    main()
