# ----------------------------
# Narrative generator (uses marginals)
# ----------------------------

def choose_label_from_marginal(marginal: np.ndarray, domain: List[str]):
    idx = int(np.argmax(marginal))
    return domain[idx], float(marginal[idx])

def compose_outcome_text(graph: FactorGraph, show_probs: bool = True) -> str:
    # compute marginals for each main variable
    parts = []
    marginals = {}
    for vname in ["Health", "Wealth", "Reputation", "Danger"]:
        marg = graph.compute_marginal(vname)
        marginals[vname] = marg
    # choose most likely labels
    H_label, H_p = choose_label_from_marginal(marginals["Health"], graph.variables["Health"].domain)
    W_label, W_p = choose_label_from_marginal(marginals["Wealth"], graph.variables["Wealth"].domain)
    R_label, R_p = choose_label_from_marginal(marginals["Reputation"], graph.variables["Reputation"].domain)
    D_label, D_p = choose_label_from_marginal(marginals["Danger"], graph.variables["Danger"].domain)

    # craft sentences using these labels and some basic heuristics
    parts.append(f"You feel {H_label.lower()} ({H_p:.2f} confidence).")
    parts.append(f"Your wealth seems {W_label.lower()} ({W_p:.2f}).")
    parts.append(f"People view you as {R_label.lower()} ({R_p:.2f}).")
    parts.append(f"The surroundings feel {D_label.lower()} ({D_p:.2f}).")

    # add a story event synthesized from combinations
    # simple rules for flavor â€” these are easy to expand
    if W_label == "Rich" and D_label == "Safe":
        parts.append("Fortune smiles: you find a small windfall without trouble.")
    elif W_label == "Rich" and D_label in ["Threatened", "Perilous"]:
        parts.append("You have wealth, but it draws attention from dangerous sorts.")
    if R_label == "Hero" and H_label != "Low":
        parts.append("Your bravery opens doors; villagers trust you more.")
    if H_label == "Low":
        parts.append("You are weak â€” a rest or potion could save you.")
    if D_label == "Perilous" and H_label == "High":
        parts.append("Despite the peril, you have the strength to push forward.")

    if R_label == "Shady":
        parts.append("Whispers follow; some opportunities close, others open unexpectedly.")

    # optionally show marginal distributions numeric summary
    if show_probs:
        parts.append("\n[State probabilities]")
        for vname, marg in marginals.items():
            dom = graph.variables[vname].domain
            pairs = ", ".join([f"{d}:{p:.2f}" for d, p in zip(dom, marg)])
            parts.append(f"{vname}: {pairs}")

    return "\n".join(parts)


# ----------------------------
# Game loop & utilities
# ----------------------------

def prompt_choice(scene):
    print("\n" + "="*60)
    print(f"Scene: {scene['title']}\n")
    print(textwrap.fill(scene['text'], width=70))
    print("\nChoices:")
    for i, c in enumerate(scene['choices']):
        print(f"  {i+1}. {c['label']}")
    print("  s. Save game")
    print("  l. Load game")
    print("  q. Quit")
    while True:
        ans = input("\nYour choice (number/s/l/q): ").strip().lower()
        if ans in ["q", "s", "l"]:
            return ans
        if ans.isdigit():
            idx = int(ans) - 1
            if 0 <= idx < len(scene['choices']):
                return idx
        print("Invalid input â€” try again.")


def save_game(graph: FactorGraph, scene_index: int, filename: str = "save_adventure.json"):
    data = {
        "scene_index": scene_index,
        "graph_state": graph.export_state()
    }
    with open(filename, "w") as f:
        json.dump(data, f, indent=2)
    print(f"Game saved to {filename}.")


def load_game(graph: FactorGraph, filename: str = "save_adventure.json"):
    try:
        with open(filename, "r") as f:
            data = json.load(f)
        scene_index = data.get("scene_index", 0)
        graph.import_state(data.get("graph_state", {}))
        print(f"Loaded game from {filename}.")
        return scene_index
    except FileNotFoundError:
        print("No save file found.")
        return None


def main_game_loop():
    print("Welcome to Adventure Quest â€” Factor Graph Edition! âœ¨\n")
    print("Short guide: pick choices, watch how the game's beliefs (Health, Wealth, etc.) change.")
    print("The game uses probabilistic inference, so results are nuanced â€” not purely deterministic.\n")

    G = build_default_graph()
    scene_index = 0
    G.run_belief_propagation(max_iters=25)

    while scene_index < len(SCENES):
        scene = SCENES[scene_index]
        ans = prompt_choice(scene)
        if ans == "q":
            print("Quitting. Goodbye!")
            return
        if ans == "s":
            save_game(G, scene_index)
            continue
        if ans == "l":
            loaded = load_game(G)
            if loaded is not None:
                scene_index = loaded
                continue
            else:
                continue
        # it's an integer index
        choice = scene['choices'][ans]
        print(f"\nYou chose: {choice['label']}\n")
        # apply effects: each effect is a multiplier on the variable prior
        for vname, mult in choice['effects'].items():
            G.apply_evidence_multiplier(vname, mult)

        # run BP after applying evidence
        G.run_belief_propagation(max_iters=30)

        # present outcome text derived from marginals
        outcome = compose_outcome_text(G, show_probs=True)
        print("\n" + "-"*40)
        print("Outcome:")
        print(outcome)
        print("-"*40)

        # small random event sampling to keep story interesting (stochastic)
        # sample a key variable by its marginal and trigger a flavor sentence
        sampled_wealth = np.random.choice(G.variables["Wealth"].domain, p=G.compute_marginal("Wealth"))
        sampled_danger = np.random.choice(G.variables["Danger"].domain, p=G.compute_marginal("Danger"))
        if sampled_wealth == "Rich" and sampled_danger == "Safe":
            print("A stranger gifts you an old coin â€” small luck!\n")
        elif sampled_danger == "Perilous":
            # maybe cost to health
            chance_harm = 0.4
            if random.random() < chance_harm:
                print("You take a scrape from danger â€” it weakens you a bit.\n")
                # penalize health a bit
                G.apply_evidence_multiplier("Health", np.array([0.9, 1.0, 1.1]))
                G.run_belief_propagation(max_iters=20)

        # move to next scene (linear for now)
        scene_index += 1

    # final evaluation
    print("\n" + "="*60)
    print("The adventure is over. Final summary:")
    final_text = compose_outcome_text(G, show_probs=True)
    print(final_text)
    print("\nThanks for playing! ðŸŽ® You can edit SCENES and the graph to change the story.")
    print("Tip: make new choices change different variables, or add new variables like 'Morality' or 'Magic'.")


if __name__ == "__main__":
    main_game_loop()
