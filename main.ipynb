def build_default_graph():
    """
    Create a tiny factor graph for the story.
    Variables:
      - Health: High / Medium / Low
      - Wealth: Rich / Okay / Poor
      - Reputation: Hero / Neutral / Shady
      - Danger: Safe / Threatened / Perilous
    """
    G = FactorGraph()

    # Add variables with initial priors
    G.add_variable("Health", ["High", "Medium", "Low"], prior=[0.6, 0.3, 0.1])
    G.add_variable("Wealth", ["Rich", "Okay", "Poor"], prior=[0.2, 0.6, 0.2])
    G.add_variable("Reputation", ["Hero", "Neutral", "Shady"], prior=[0.3, 0.5, 0.2])
    G.add_variable("Danger", ["Safe", "Threatened", "Perilous"], prior=[0.5, 0.3, 0.2])

    # Unary factor examples (small local biases)
    G.add_unary_factor("F_Health_prior", "Health", potential=[1.0, 1.0, 1.0])
    G.add_unary_factor("F_Wealth_prior", "Wealth", potential=[1.0, 1.0, 1.0])
    G.add_unary_factor("F_Reputation_prior", "Reputation", potential=[1.0, 1.0, 1.0])
    G.add_unary_factor("F_Danger_prior", "Danger", potential=[1.0, 1.0, 1.0])

    # Pairwise potentials: Health <-> Danger
    # Health rows: High, Medium, Low
    # Danger cols: Safe, Threatened, Perilous
    pot_health_danger = np.array([
        [3.0, 1.0, 0.2],  # High health prefers Safe
        [1.0, 2.0, 0.8],  # Medium health ambivalent
        [0.3, 1.0, 2.0]   # Low health correlated with Perilous
    ])
    G.add_pairwise_factor("F_Health_Danger", "Health", "Danger", pot_health_danger)

    # Pairwise: Wealth <-> Reputation
    # Wealth rows: Rich, Okay, Poor
    # Reputation cols: Hero, Neutral, Shady
    pot_wealth_rep = np.array([
        [0.6, 1.0, 2.0],  # Rich sometimes shady (greedy)
        [1.0, 1.5, 1.0],  # Okay balanced
        [1.2, 1.0, 0.8]   # Poor more sympathetic -> Hero slightly
    ])
    G.add_pairwise_factor("F_Wealth_Reputation", "Wealth", "Reputation", pot_wealth_rep)

    # Pairwise: Wealth <-> Health (wealth helps health)
    pot_wealth_health = np.array([
        [2.0, 1.2, 0.6],  # Rich -> more likely High health
        [1.0, 1.0, 1.0],
        [0.5, 1.0, 1.6]   # Poor -> more likely Low health
    ])
    G.add_pairwise_factor("F_Wealth_Health", "Wealth", "Health", pot_wealth_health)

    return G


